{
  "rules": {
    "admins": {
      ".read": "auth != null",
      ".write": "auth.token.email === 'mainplatform.nexus@gmail.com'",
      "$uid": {
        ".validate": "newData.val() === true || newData.val() === false"
      }
    },
    "movies": {
      ".read": true,
      ".write": "auth != null && auth.token.email === 'mainplatform.nexus@gmail.com'"
    },
    "series": {
      ".read": true,
      ".write": "auth != null && auth.token.email === 'mainplatform.nexus@gmail.com'"
    },
    "originals": {
      ".read": true,
      ".write": "auth != null && auth.token.email === 'mainplatform.nexus@gmail.com'"
    },
    "music": {
      ".read": true,
