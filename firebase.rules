    },
    "liveTV": {
      ".read": true,
      ".write": "auth != null && auth.token.email === 'mainplatform.nexus@gmail.com'"
    },
    "news": {
      ".read": true,
      ".write": "auth != null && auth.token.email === 'mainplatform.nexus@gmail.com'",
      "$newsId": {
        "comments": {
          ".read": true,
          ".write": "auth != null"
        }
