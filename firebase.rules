        ".read": "auth != null && auth.token.email === 'mainplatform.nexus@gmail.com'",
        ".write": "auth != null && auth.token.email === 'mainplatform.nexus@gmail.com'"
      },
      "transactions": {
        ".read": "auth != null && auth.token.email === 'mainplatform.nexus@gmail.com'",
        ".write": "auth != null"
      }
    },
    "users": {
      ".read": true,
      ".write": "auth != null",
      "$uid": {
        ".read": true,
        ".write": "auth != null && (auth.token.email === 'mainplatform.nexus@gmail.com' || auth.uid === $uid)"
      }
    },
    "blockedDevices": {
